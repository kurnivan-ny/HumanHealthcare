<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.noActionBar" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="AppTheme.MaterialComponents.noActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_white_gradient</item>
        <item name="colorPrimaryVariant">@color/blue_dark_gradient</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_white_gradient</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/blue_white_gradient</item>
        <item name="colorAccent">@color/blue_dark_gradient</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:keyTextSize">14sp</item>
    </style>


</resources>